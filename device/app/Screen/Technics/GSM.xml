<?xml version="1.0" encoding="utf-8" ?>
<c:Screen xmlns:c="BitMobile.Controls" xmlns:s="BitMobile.ValueStack" StyleSheet="Waybill.css">

    <!-- <s:Push Id="curWaybillInfo" Value="$GetCurWaybillInfo()"></s:Push> -->
    <s:Push Id="Fills" Value="$GetFills()"></s:Push>
    <s:Push Id="cntFills" Value="$GetCntFills($Fills)"></s:Push>
    				
	<c:DockLayout>
	
		<c:DockLayout CssClass="top_navigator">
			<c:HorizontalLayout CssClass="btn_back" OnEvent="Back" OnClickAction="$Workflow.DoRollback()">
				<c:Image />
				<c:TextView Text="#back#" />
			</c:HorizontalLayout>
												
			<c:Button Id="btnForward" Text="#ready#" CssClass="btn_forward" OnClickAction="$Workflow.DoCommit()"/>
			
			<c:HorizontalLayout>
				<c:TextView Text="#gsm#" />
			</c:HorizontalLayout>			
		</c:DockLayout>
		
		<c:DockLayout CssClass="footer">
			<c:HorizontalLine CssClass="navy"/>
			<c:DockLayout CssClass="btn_center_footer" OnClickAction="$DoAction(Fill, null)">
				<c:TextView Text="#add#" />
			</c:DockLayout>
		</c:DockLayout>
		
		<c:HorizontalLine CssClass="navy"/>

		<c:ScrollView Id="scrlVw">
			
			<c:HorizontalLayout CssClass="grid">
						
						<c:VerticalLayout CssClass="no_mark"></c:VerticalLayout>
						
						<c:VerticalLayout>
							<c:TextView Text="" CssClass="main_row2"></c:TextView>
						</c:VerticalLayout>
						
			</c:HorizontalLayout>
						
			<c:HorizontalLayout CssClass="caption_grid">
		        <c:TextView Text="#fillup#:"></c:TextView>
		    </c:HorizontalLayout>
	    	
	    	<c:HorizontalLine/>
	    	
	    	<s:If Test="$cntFills == 0">
			
				<c:TextView Text="#unknown#" CssClass="TextNoPlans" />
				
				<c:HorizontalLine/>
				
			</s:If>			
			<s:Else>
			
				<s:Iterator Id="Fills" Value="$Fills">

					<!-- Id, RowId, Date, Count -->
					
					<c:SwipeHorizontalLayout Id="swipe_layout" CssClass="swipe_layout" Index="0">
												
						<c:HorizontalLayout CssClass="grid" OnClickAction="$DoAction(techTask, $techTask.Id)">
							
							<c:VerticalLayout>
								
								<c:TextView Text="Заправка {$Fills.Date}" CssClass="description_row"></c:TextView>
								<c:TextView Text="Количество топлива: {$Fills.Count}" CssClass="main_row"></c:TextView>
								<c:TextView Text="Стоимость: " CssClass="main_row"></c:TextView>
																							
							</c:VerticalLayout>
														
						</c:HorizontalLayout>
												
					</c:SwipeHorizontalLayout>
					
					<c:HorizontalLine/>
					
				</s:Iterator>
								
			</s:Else>
						    	
		 <c:HorizontalLayout CssClass="swipe_info">
			<c:Image CssClass="img_right"/>
			<c:TextView Text="Смахните влево, чтобы     удалить заправку" />				
		</c:HorizontalLayout>

		</c:ScrollView>
		
	</c:DockLayout>

</c:Screen>